ass="line">        &#125;</div><div class="line">        UIScroll.prototype.render = <span class="function"><span class="keyword">function</span>(<span class="params"></span>)</span>&#123;</div><div class="line">            <span class="keyword">var</span> children = childrenStringGenerate(<span class="string">'img'</span>,<span class="keyword">this</span>.style[<span class="string">'scrollItem'</span>],<span class="keyword">this</span>.prop.value);</div><div class="line">            <span class="keyword">return</span> <span class="string">'&lt;div class="'</span>+<span class="keyword">this</span>.style[<span class="string">'scroll'</span>]+<span class="string">'"&gt;'</span>+children+<span class="string">'&lt;/div&gt;'</span>;</div><div class="line">        &#125;</div><div class="line"></div><div class="line">        <span class="keyword">var</span> menu = <span class="keyword">new</span> UIMenu();</div><div class="line">        menu.setChildren([</div><div class="line">            <span class="keyword">new</span> UIMenuItem(&#123;<span class="attr">value</span>:<span class="string">"Test1"</span>&#125;),</div><div class="line">            <span class="keyword">new</span> UIMenuItemSelectOption(&#123;<span class="attr">value</span>:[<span class="string">"Test1 Test1 Test1"</span>,<span class="string">"Test2"</span>]&#125;),</div><div class="line">            <span class="keyword">new</span> UIDropdown(&#123;<span class="attr">value</span>:[<span class="string">"Test1 Test1 Test1"</span>,<span class="string">"Test2"</span>]&#125;)</div><div class="line">        ]);</div><div class="line">        ui.render(menu,<span class="built_in">document</span>.getElementById(<span class="string">'root'</span>));</div><div class="line">    &#125;</div></pre></td></tr></table></figure></p>
